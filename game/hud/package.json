{
  "private": true,
  "name": "cu-ui-hud",
  "version": "0.1.0",
  "description": "Camelot Unchained UI - hud",
  "license": "MPL-2.0",
  "main": "dist/hud.js",
  "author": "City State Entertainment, LLC <support@citystateentertainment.com>",
  "contributors": [
    "Ortu"
  ],
  "keywords": [
    "Camelot",
    "Unchained",
    "cu",
    "cu-ui",
    "crafting"
  ],
  "files": [
    "dist/",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/csegames/cu-ui.git"
  },
  "watch": {
    "build": {
      "patterns": "src",
      "extensions": "ts,tsx"
    },
    "build:sass": {
      "patterns": "src",
      "extensions": "scss"
    }
  },
  "scripts": {
    "serve": "http-server dist/ -p 9003 -o --cors",
    "livereload": "livereload dist/",
    "watch": "npm-watch",
    "dev": "start npm run livereload && start npm run watch && start npm run serve",
    "postinstall": "npm run typings",
    "typings": "npm run clean:typings && typings install",
    "clean:typings": "rimraf typings",
    "clean:tmp": "rimraf tmp",
    "clean:tmpp": "rimraf tmpp",
    "clean:dist": "rimraf dist",
    "clean:build": "rimraf build",
    "clean:publish": "rimraf build",
    "clean": "npm run clean:tmp && npm run clean:tmpp",
    "copy:misc": "(robocopy src\\ build\\ /s /xf *.js /xf *.ts /xf *.tsx /xf *.scss) ^& IF %ERRORLEVEL% LEQ 1 exit 0",
    "copy:misc:nix": "cd src && tar cf - --exclude=*.js --exclude=*.ts --exclude=*.tsx --exclude=*.scss . | ( cd ../build && tar xvf - )",
    "copy:third-party": "(robocopy src\\third-party build\\third-party /s) ^& IF %ERRORLEVEL% LEQ 1 exit 0",
    "copy:third-party:nix": "if [ -d src/third-party ]; then mkdir build/third-party && cp -r src/third-party build/third-party; fi",
    "copy": "npm run copy:third-party && npm run copy:misc",
    "copy:nix": "npm run copy:third-party:nix && npm run copy:misc:nix",
    "babel": "babel tmp -d tmpp",
    "browserify": "browserify tmpp/index.js -o build/js/hud.js",
    "prebrowserify": "mkdirp build/js",
    "build:sass": "node-sass src/index.scss -o build/css --importer node_modules/camelot-unchained/lib/third-party/sass-importer/sass-npm-importer.js",
    "postbuild:sass": "npm run dist",
    "build": "tsc && npm run copy -s && npm run babel && npm run browserify && npm run build:sass",
    "postbuild": "npm run clean",
    "prebuild": "npm run clean -s",
    "build:nix": "tsc && npm run copy:nix -s && npm run babel && npm run browserify && npm run build:sass && npm run clean:build && npm run clean:tmp -s && npm run clean:tmpp -s",
    "prebuild:nix": "npm run clean -s",
    "dist": "(robocopy build\\ dist\\ /s ) ^& IF %ERRORLEVEL% LEQ 1 exit 0 && npm run clean:build",
    "clean:hatchery": "(rmdir /s /q %localappdata%/CSE/CamelotUnchained/4/INTERFACE/hud) ^& exit 0",
    "copy:hatchery": "(robocopy build\\ %localappdata%/CSE/CamelotUnchained/4/INTERFACE/hud\\ /s) ^& IF %ERRORLEVEL% LEQ 1 exit 0",
    "build:hatchery": "npm run build && npm run clean:hatchery && npm run copy:hatchery",
    "clean:wyrmling": "(rmdir /s /q %localappdata%/CSE/CamelotUnchained/10/INTERFACE/hud) ^& exit 0",
    "copy:wyrmling": "(robocopy build\\ %localappdata%/CSE/CamelotUnchained/10/INTERFACE/hud\\ /s) ^& IF %ERRORLEVEL% LEQ 1 exit 0",
    "build:wyrmling": "npm run build && npm run clean:wyrmling && npm run copy:wyrmling",
    "clean:cube": "(rmdir /s /q %localappdata%/CSE/CamelotUnchained/27/INTERFACE/hud) ^& exit 0",
    "copy:cube": "(robocopy dist\\ %localappdata%/CSE/CamelotUnchained/27/INTERFACE/hud\\ /s) ^& IF %ERRORLEVEL% LEQ 1 exit 0",
    "build:cube": "npm run build && npm run clean:cube && npm run copy:cube"
  },
  "dependencies": {
    "camelot-unchained": "latest",
    "es6-promise": "^3.2.1",
    "jquery": "^3.0.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-draggable": "^2.1.2",
    "react-redux": "^4.4.5",
    "react-select": "^1.0.0-beta13",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-preset-es2015": "^6.5.0",
    "browserify": "^13.0.0",
    "http-server": "^0.9.0",
    "livereload": "^0.4.1",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.4.2",
    "npm-watch": "^0.1.4",
    "typescript": "^1.8.0",
    "typings": "^0.6.8"
  }
}
